{layout '../../Base/templates/@layout.latte'}
{varType App\Security\SecurityUser $_user}
{block #head}
	{control encore-css, app}
{/block}
{block #scripts}
	{control encore-js, app}
{/block}
{block #bodyClass}control-sidebar-slide-open layout-navbar-fixed sidebar-mini-xs text-sm{/block}
{block #main}
	<!-- Site wrapper -->
	<div class="wrapper">
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light dropdown-legacy border-bottom-0 text-sm">
			<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item d-none d-sm-inline-block">
					<a href="{$_user->getIdentity()->getData()['projectUrl']}"  target="_blank" class="nav-link">
						{_'messages.navigation.openEshop'}
					</a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
					<a href="{$_user->getIdentity()->getData()['projectUrl']}admin"  target="_blank" class="nav-link">
						{_'messages.navigation.openAdmin'}
					</a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
					<a n:href=":Front:Sign:out" class="nav-link">
						{_'messages.navigation.logout'}
					</a>
				</li>
			</ul>

			<!-- Right navbar links -->
			<ul class="navbar-nav ml-auto">
				<li class="nav-item dropdown">
					<a class="nav-link" data-toggle="dropdown" href="#">
						<i class="flag-icon flag-icon-cz"></i>
					</a>
					<div class="dropdown-menu dropdown-menu-right p-0">
						<a href="#" class="dropdown-item">
							<i class="flag-icon flag-icon-us mr-2"></i> English
						</a>
						<a href="#" class="dropdown-item active">
							<i class="flag-icon flag-icon-cz mr-2"></i> Čeština
						</a>
						<a href="#" class="dropdown-item">
							<i class="flag-icon flag-icon-sk mr-2"></i> Slovenčina
						</a>
					</div>
				</li>
				<li class="nav-item user-menu">
					<a href="#" class="nav-link">
						<span class="d-none d-md-inline">{$_user->getIdentity()->getData()['name']} - {$_user->getIdentity()->getData()['projectName']}</span>
					</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->

		<!-- Main Sidebar Container -->
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
			<!-- Brand Logo -->
			<a n:href=":App:Home:" class="brand-link text-sm">
				<span class="brand-text font-weight-light">Fakturoid</span>
			</a>

			<!-- Sidebar -->
			<div class="sidebar" style="overflow-y: auto;">
				<!-- Sidebar Menu -->
				<nav class="mt-2">
					<ul class="nav nav-pills nav-sidebar flex-column nav-flat nav-legacy nav-compact nav-child-indent text-sm"
						data-widget="treeview" role="menu" data-accordion="false">
						<li class="nav-item">
							<a n:href=":Shoptet:Order:list" class="nav-link {ifCurrent :Shoptet:Order:*}active{/ifCurrent}">
								<i class="nav-icon fas fa-th"></i>
								<p>
									{_'messages.navigation.orders'}
									<span class="right badge badge-danger">New</span>
								</p>
							</a>
						</li>
						<li class="nav-item">
							<a n:href=":Shoptet:Invoice:list" class="nav-link {ifCurrent :Shoptet:Invoice:*}active{/ifCurrent}">
								<i class="nav-icon fas fa-th"></i>
								<p>
									{_'messages.navigation.invoices'}
									<span class="right badge badge-danger">New</span>
								</p>
							</a>
						</li>
						<li class="nav-item">
							<a n:href=":Shoptet:ProformaInvoice:list" class="nav-link {ifCurrent :Shoptet:ProformaInvoice:*}active{/ifCurrent}">
								<i class="nav-icon fas fa-th"></i>
								<p>
									{_'messages.navigation.proformaInvoices'}
									<span class="right badge badge-danger">New</span>
								</p>
							</a>
						</li>
						<li class="nav-item">
							<a n:href=":Shoptet:CreditNote:list" class="nav-link {ifCurrent :Shoptet:CreditNote:*}active{/ifCurrent}">
								<i class="nav-icon fas fa-th"></i>
								<p>
									{_'messages.navigation.creditNotes'}
									<span class="right badge badge-danger">New</span>
								</p>
							</a>
						</li>
						<li class="nav-header">{_'messages.navigation.settings'}</li>
						<li class="nav-item">
							<a n:href=":App:Settings:default" class="nav-link {ifCurrent :App:Settings:default}active{/ifCurrent}">
								<i class="nav-icon fas fa-cog"></i>
								<p>
									{_'messages.navigation.addonSettings'}
								</p>
							</a>
						</li>
						<li class="nav-item">
							<a n:href=":App:Settings:orderStatus" class="nav-link {ifCurrent :App:Settings:orderStatus}active{/ifCurrent}">
								<i class="nav-icon fas fa-cog"></i>
								<p>
									{_'messages.navigation.orderStatus'}
								</p>
							</a>
						</li>
					</ul>
				</nav>
				<!-- /.sidebar-menu -->
			</div>
			<!-- /.sidebar -->
		</aside>

		<div class="content-wrapper" style="min-height: 1232.02px;">
			<section class="content-header">

			</section>
			<section class="content">
				{snippet flashes}
					<div n:foreach="$flashes as $flash" n:class="alert, 'alert-' . $flash->type" role="alert">{$flash->message|noescape}</div>
				{/snippet}
				{block #content}
				{/block}
			</section>
		</div>

		<footer class="main-footer text-sm">
			<div class="float-right d-none d-sm-block">
				<b>Version</b> 1.0.0
			</div>
			<strong>Copyright © 2014-2021 <a href="https://tomaskulhanek.cz" target="_blank">Tomáš Kulhánek</a>.</strong> All rights reserved.
		</footer>
	</div>
{/block}
